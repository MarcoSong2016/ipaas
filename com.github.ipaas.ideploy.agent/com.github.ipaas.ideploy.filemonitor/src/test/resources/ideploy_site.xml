<?xml version="1.0" encoding="UTF-8"?>
<site>
	<url>http://nexus.ideploy.com/</url>
	<bundles>
		<url>content/groups/public</url>
		<!-- thirt bundle -->
		<bundle>
			<groupId>commons-lang</groupId>
